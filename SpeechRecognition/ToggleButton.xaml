<UserControl x:Class="ToggleSwitch.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToggleSwitch"
             mc:Ignorable="d" Height="124.219" Width="266.167">



    <Viewbox Margin="0,2,2,1">
        <Grid MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" HorizontalAlignment="Center" Height="60" Margin="0" VerticalAlignment="Top" Width="137">
            <Rectangle x:Name="Front" Fill="#FF404040" Margin="0,0,0,0" RadiusY="29" RadiusX="32" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Rectangle x:Name="Back" Fill="#FF262626" Margin="4,4,4,4" RadiusY="29" RadiusX="29" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>

            <Ellipse x:Name="Dot" Fill="#FF404040" HorizontalAlignment="Center" Height="45" VerticalAlignment="Center" Width="45" MouseLeftButtonDown="Dot_MouseLeftButtonDown"/>
        </Grid>
    </Viewbox>




</UserControl>
